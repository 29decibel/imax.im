<div id="admin_homeland_reply" class="form">

	<%= simple_form_for([:admin, :homeland,@reply]) do |f| %>
  <%= render "/shared/error_messages", :target => @reply  %>
  <fieldset>
      <%= f.input :topic_id %>
      <%= f.input :user_id %>
      <%= f.input :body %>
      <div class="form-actions">
      <%= f.submit "保存", :class => "btn btn-primary" %> or <%= link_to "取消", admin_homeland_replies_path %>
    </div>
  </fieldset>
<% end %>
</div>