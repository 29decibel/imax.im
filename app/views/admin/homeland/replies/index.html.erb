<%= render 'base' %>
<div id="admin_homeland_replies">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>编号</th>
        <th><%= t("mongoid.attributes.reply.topic_id") %></th>
        <th><%= t("mongoid.attributes.reply.user_id") %></th>
        <th><%= t("mongoid.attributes.reply.body") %></th>
        <th>创建时间</th>
        <th class="opts"></th>
      </tr>
    </thead>
    <tbody>
    <% @replies.each do |item| %>
    <tr class="<%= cycle("","even") %>">
        <td><%= item.id %></td>
        <td><%= item.topic_id %></td>
        <td><%= item.user_id %></td>
        <td><%= item.body %></td>
        <td><%= l(item.created_at, :format => :long) %></td>
        <td>
          <%= link_to "", edit_admin_homeland_reply_path(item.id), :class => "icon-edit" %>
          <%= link_to '', admin_homeland_reply_path(item.id), :method => :delete, :'data-confirm' => '确定要删除吗?', :class => "icon-remove" %>
        </td>
      </tr>
    <% end %>
    <tbody>
  </table>
  <%= will_paginate @replies %>
</div>

