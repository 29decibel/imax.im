<div id="admin_homeland_section" class="form">

	<%= simple_form_for([:admin,:homeland,@section]) do |f| %>
  <%= render "/shared/error_messages", :target => @section  %>
  <fieldset>
      <%= f.input :name %>
      <%= f.input :sort %>
      <div class="form-actions">
      <%= f.submit "保存", :class => "btn btn-primary" %> or <%= link_to "取消", admin_homeland_sections_path %>
    </div>
  </fieldset>
<% end %>
</div>