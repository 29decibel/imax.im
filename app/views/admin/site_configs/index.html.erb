<%= render 'base' %>
<div id="admin_site_configs">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>编号</th>
        <th><%= t("mongoid.attributes.site_config.key") %></th>
        <th>说明</th>
        <th class="opts"></th>
      </tr>
    </thead>
    <tbody>
    <% @site_configs.each do |item| %>
    <tr class="<%= cycle("","even") %>">
        <td><%= item.id %></td>
        <td><%= item.key %></td>
        <td><%= t("site_config.#{item.key}") %></td>
        <td>
          <%= link_to "", edit_admin_site_config_path(item.id), :class => "icon-edit" %>
          <%= link_to '', admin_site_config_path(item.id), :method => :delete, :'data-confirm' => '确定要删除吗?', :class => "icon-remove" %>
        </td>
      </tr>
    <% end %>
    <tbody>
  </table>
  <%= will_paginate @site_configs %>
</div>

