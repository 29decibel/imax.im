<%= render 'base' %>
<div id="admin_attach_entries">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>编号</th>
        <th><%= t("mongoid.attributes.attach_entry.name") %></th>
        <th><%= t("mongoid.attributes.attach_entry.format") %></th>
        <th><%= t("mongoid.attributes.attach_entry.quality") %></th>
        <th><%= t("mongoid.attributes.attach_entry.file_size") %></th>
        <th>创建时间</th>
        <th class="opts"></th>
      </tr>
    </thead>
    <tbody>
    <% @attach_entries.each do |item| %>
    <tr class="<%= cycle("","even") %>">
        <td><%= link_to item.id, admin_attach_entry_path(item.id) %></td>
        <td style="width:500px;"><%= item.name %></td>
        <td><%= item.format %></td>
        <td><%= item.quality %></td>
        <td><%= item.file_size %></td>
        <td><%= l(item.created_at, :format => :long) %></td>
        <td>
          <%= link_to "", edit_admin_attach_entry_path(item.id), :class => "icon-edit" %>
          <%= link_to '', admin_attach_entry_path(item.id), :method => :delete, :'data-confirm' => '确定要删除吗?', :class => "icon-remove" %>
        </td>
      </tr>
    <% end %>
    <tbody>
  </table>
  <%= will_paginate @attach_entries %>
</div>

