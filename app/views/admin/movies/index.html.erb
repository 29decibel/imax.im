<%= render 'base' %>
<div id="admin_movies">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>编号</th>
        <th><%= t("mongoid.attributes.movie.title") %></th>
        <th><%= t("mongoid.attributes.movie.year") %></th>
        <th><%= t("mongoid.attributes.movie.pub_date") %></th>
        <th><%= t("mongoid.attributes.movie.time_length") %></th>
        <th><%= t("mongoid.attributes.movie.imdb") %></th>
        <th><%= t("mongoid.attributes.movie.rank") %></th>
        <th><%= t("mongoid.attributes.movie.raters_count") %></th>
        <th>创建时间</th>
        <th class="opts"></th>
      </tr>
    </thead>
    <tbody>
    <% @movies.each do |item| %>
    <tr class="<%= cycle("","even") %>">
        <td><%= link_to item.id, admin_movie_path(item.id) %></td>
        <td><%= item.title %></td>
        <td><%= item.year %></td>
        <td><%= item.pub_date %></td>
        <td><%= item.time_length %></td>
        <td><%= item.imdb %></td>
        <td><%= item.rank %></td>
        <td><%= item.raters_count %></td>
        <td><%= l(item.created_at, :format => :long) %></td>
        <td>
          <%= link_to "", edit_admin_movie_path(item.id), :class => "icon-edit" %>
          <%= link_to '', admin_movie_path(item.id), :method => :delete, :'data-confirm' => '确定要删除吗?', :class => "icon-remove" %>
        </td>
      </tr>
    <% end %>
    <tbody>
  </table>
  <%= will_paginate @movies %>
</div>

